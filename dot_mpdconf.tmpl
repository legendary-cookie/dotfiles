audio_output {
	type "pulse"
	name "pulse audio"
}

audio_output {
	type "fifo"
	name "mpd_fifo"
	path "/tmp/mpd.fifo"
	format "44100:16:2"
}

bind_to_address "127.0.0.1"
port "6600"
password "mpdsecret@read,add,control,admin"

music_directory "{{ .chezmoi.homeDir }}/.mpd/music"
pid_file "{{ .chezmoi.homeDir }}/.mpd/mpd.pid"
db_file "{{ .chezmoi.homeDir }}/.mpd/mpd.db"
state_file "{{ .chezmoi.homeDir }}/.mpd/mpdstate"
playlist_directory "{{ .chezmoi.homeDir }}/.mpd/playlists"
